<div class="row">
	<div class="col-md-3">
		<div class="row">
			<div class="col-md-3">
				<%= image_tag @user.avatar.url, class: "user-pic-stats img-rounded" %>
			</div>
			<div class="col-md-9">
				<h3><%= @user.name %></h3>
				<p>@<%= @user.username %></p>
			</div>
		</div>
		<p><%= @user.bio %></p>
		<p><i class="fa fa-map-marker"></i> <%= @user.location %></p>
		<p><i class="fa fa-calendar"></i> Joined <%= @user.created_at.strftime("%B %Y") %></p>
	</div>
	<div class="col-md-8 col-md-offset-1">
		<div class="row">
			<% @followed_users.each do |user| %>
				<div class="col-md-6">
					<div class="well">
						<div class="row rel-pos">
							<div class="col-md-6">
								<p>
									<%= image_tag user.avatar.url, class: "user-pic-md img-rounded" %>
								</p>
							</div>
							<div class="col-md-6 bottom">
								<p>
									<% if current_user.following.include?(@user.id) %>
										<%= link_to "Unfollow", unfollow_path(id: @user.id), class: "btn btn-danger" %>
									<% else %>
										<% if current_user.id != @user.id %>
											<%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
										<% end %>
									<% end %>
								</p>
							</div>
						</div>
						<h3><%= link_to user.name, show_user_path(id: user.id) %></h3>
						<p><%= link_to "@#{user.username}", show_user_path(id: user.id) %></p>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>