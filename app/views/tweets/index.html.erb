<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% @tweets.each do |tweet| %>
      <div class="well">
        <div class="row">
          <div class="col-md-12">
            <%= image_tag tweet.user.avatar.url, class: "user-pic-nav" %>&nbsp;
            <%= link_to tweet.user.name, show_user_path(id: tweet.user_id) %> <span class="gray-text"><%= link_to "@#{tweet.user.username}", show_user_path(id: tweet.user_id) %> &#8226; <%= time_ago_in_words(tweet.created_at) %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= tweet.message %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= link_to 'Edit', edit_tweet_path(tweet) %> | <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<p>
  <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary" %>
</p>